<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

	<Font name="CIS_RegularFont" font="Interface\Addons\CookyItemSplitter\Media\PTCaption.ttf" justifyH="LEFT" height="13" virtual="true">
		<Shadow>
			<Color r="0" g="0" b="0"/>
			<Offset x="1" y="-1"/>
		</Shadow>
	</Font>

	<FontString name="CIS_TextTemplate" wordwrap="true" parentKey="text" text="Default" inherits="CIS_RegularFont" virtual="true">
		<Color r="1" g="1" b="1"/>
	</FontString>

	<Texture name="CIS_ArrowLeftTemplate" parentKey="arrow" file="Interface\AddOns\CookyItemSplitter\Media\arrowleft.tga" virtual="true">
		<Anchors>
			<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER"/>
		</Anchors>
		<Color r="1" g="1" b="1" a="0.4"/>
		<Size x="10" y="15"></Size>
	</Texture>

	<Texture name="CIS_ArrowRightTemplate" parentKey="arrow" file="Interface\AddOns\CookyItemSplitter\Media\arrowright.tga" virtual="true">
		<Anchors>
			<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER"/>
		</Anchors>
		<Color r="1" g="1" b="1" a="0.4"/>
		<Size x="10" y="15"></Size>
	</Texture>

	<Button name="CIS_ButtonTemplate" virtual="true">
		<Size x="85" y="25"></Size>
		<Backdrop bgFile="Interface\Buttons\WHITE8x8" edgeFile="Interface\Buttons\WHITE8x8">
			<EdgeSize val="1"/>
			<Color r="0" g="0.55" b="0.85" a="0.6"/>
			<BorderColor r="0.06" g="0.08" b="0.09" a="1"/>
		</Backdrop>
		<Layers>
			<Layer>
				<FontString name="$parentText" justifyH="CENTER" inherits="CIS_TextTemplate">
					<Size y="25"></Size>
					<Anchors>
						<Anchor point="LEFT" relativeTo="$parent" relativePoint="LEFT"/>
						<Anchor point="RIGHT" relativeTo="$parent" relativePoint="RIGHT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter>
				self:SetBackdropColor(0, 0.55, 0.85, 1)
			</OnEnter>
			<OnLeave>
				self:SetBackdropColor(0, 0.55, 0.85, 0.6)
			</OnLeave>
		</Scripts>
	</Button>
</Ui>
