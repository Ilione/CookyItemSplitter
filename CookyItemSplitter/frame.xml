<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

	<Frame name="CIS_ParentFrame" parent="UIParent" toplevel="true" enableMouse="true" enableKeyboard="false" clampedToScreen="true" frameStrata="HIGH" hidden="true">
		<Size x="200" y="95"></Size>
		<Backdrop bgFile="Interface\Buttons\WHITE8x8" edgeFile="Interface\Buttons\WHITE8x8">
			<EdgeSize val="1"/>
			<Color r="0.22" g="0.25" b="0.28" a="1"/>
			<BorderColor r="0.06" g="0.08" b="0.09" a="1"/>
		</Backdrop>
		<Layers>
			<Layer>
				<FontString name="$parentText" parentKey="text" inherits="CIS_TextTemplate">
					<Anchors>
						<Anchor point="TOP" relativeTo="$parent" relativePoint="TOP" y="-35"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="$parentTitlebar" parentKey="titlebar">
				<Size y="25"></Size>
				<Backdrop bgFile="Interface\Buttons\WHITE8x8" edgeFile="Interface\Buttons\WHITE8x8">
					<EdgeSize val="1"/>
					<Color r="0.22" g="0.25" b="0.28" a="1"/>
					<BorderColor r="0.06" g="0.08" b="0.09" a="1"/>
				</Backdrop>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT"/>
					<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT"/>
				</Anchors>
				<Layers>
					<Layer>
						<FontString name="$parentText" justifyH="CENTER" inherits="CIS_TextTemplate">
							<Anchors>
								<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<Button name="$parentCloseButton" parentKey="closeButton" registerForClick="LeftButtonUp">
						<Backdrop bgFile="Interface\Buttons\WHITE8x8" edgeFile="Interface\Buttons\WHITE8x8">
							<EdgeSize val="1"/>
							<Color r="0.6" g="0.1" b="0.1" a="0.6"/>
							<BorderColor r="0.06" g="0.08" b="0.09"/>
							<BackgroundInsets left="1" right="1" top="1" bottom="1"/>
						</Backdrop>
						<NormalFont style="CIS_RegularFont"/>
						<HighlightFont style="CIS_RegularFont"/>
						<Size x="20" y="18"></Size>
						<Anchors>
							<Anchor point="RIGHT" relativeTo="$parent" relativePoint="RIGHT" x="-5"/>
						</Anchors>
						<Layers>
							<Layer>
								<FontString name="$parentText" inherits="CIS_TextTemplate">
									<Anchors>
										<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
						<Scripts>
							<OnLoad>
								self.text:SetText("X")
							</OnLoad>
							<OnEnter>
								self:SetBackdropColor(0.6, 0.1, 0.1, 1)
								GameTooltip:SetOwner(self, "ANCHOR_RIGHT")
								GameTooltip:SetText("Close")
								GameTooltip:Show()
							</OnEnter>
							<OnLeave>
								self:SetBackdropColor(0.6, 0.1, 0.1, 0.6)
								GameTooltip:Hide()
							</OnLeave>
							<OnClick>
								GameTooltip:Hide()
								CIS_ParentFrame:Hide()
							</OnClick>
						</Scripts>
					</Button>
				</Frames>
				<Scripts>
					<OnLoad>
						self.text:SetText("|cffBF5FFFCooky|r Item Splitter")
					</OnLoad>
				</Scripts>
			</Frame>
			<Button name="$parentLeftButton" parentKey="leftButton">
				<Size x="20" y="20" ></Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentText" relativePoint="LEFT" x="-42.5"/>
				</Anchors>
				<HighlightTexture parentKey="highlightTexture" inherits="CIS_ArrowLeftTemplate"/>
				<DisabledTexture parentKey="disabledTexture" inherits="CIS_ArrowLeftTemplate"/>
				<PushedTexture parentKey="pushedTexture" inherits="CIS_ArrowLeftTemplate"/>
				<NormalTexture parentKey="normalTexture" inherits="CIS_ArrowLeftTemplate"/>
			</Button>
			<Button name="$parentRightButton" parentKey="rightButton">
				<Size x="20" y="20" ></Size>
				<Anchors>
					<Anchor point="RIGHT" relativeTo="$parentText" relativePoint="RIGHT" x="42.5"/>
				</Anchors>
				<HighlightTexture parentKey="highlightTexture" inherits="CIS_ArrowRightTemplate"/>
				<DisabledTexture parentKey="disabledTexture" inherits="CIS_ArrowRightTemplate"/>
				<PushedTexture parentKey="pushedTexture" inherits="CIS_ArrowRightTemplate"/>
				<NormalTexture parentKey="normalTexture" inherits="CIS_ArrowRightTemplate"/>
			</Button>

			<Button name="$parentSplitOnce" parentKey="splitOnce" inherits="CIS_ButtonTemplate">
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parentText" relativePoint="BOTTOM" x="-5" y="-10"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.text:SetText("Split")
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="$parentSplitAll" parentKey="splitAll" inherits="CIS_ButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentText" relativePoint="BOTTOM" x="5" y="-10"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.text:SetText("Auto Split")
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="$parentGuildBankSplit" parentKey="guildBankSplit" inherits="CIS_ButtonTemplate" hidden="true">
				<Size x="180" y="25"></Size>
				<Anchors>
					<Anchor point="BOTTOM" relativeTo="$parent" relativePoint="BOTTOM" y="10"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.text:SetText("Auto Split Into Guild Bank")
					</OnLoad>
					<OnShow>
						self:GetParent():SetHeight(125)
					</OnShow>
					<OnHide>
						self:GetParent():SetHeight(95)
					</OnHide>
				</Scripts>
			</Button>
			<Button name="$parentBuyOnce" parentKey="buyOnce" inherits="CIS_ButtonTemplate" hidden="true">
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parentText" relativePoint="BOTTOM" x="-35" y="-10"/>
				</Anchors>
				<Size x="55" y="25"></Size>
				<Scripts>
					<OnLoad>
						self.text:SetText("Buy")
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="$parentBuyStacks" parentKey="buyStacks" inherits="CIS_ButtonTemplate" hidden="true">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentText" relativePoint="BOTTOM" x="-25" y="-10"/>
				</Anchors>
				<Size x="115" y="25"></Size>
				<Scripts>
					<OnLoad>
						self.text:SetText("Buy Stacks")
					</OnLoad>
				</Scripts>
			</Button>
		</Frames>
	</Frame>
</Ui>
